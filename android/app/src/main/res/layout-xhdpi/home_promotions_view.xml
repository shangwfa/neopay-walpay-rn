<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_200dp"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/home_meeting_more_rl"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_35dp"
            android:layout_marginTop="@dimen/size_8dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@mipmap/img_home_meeting" />

            <TextView
                android:id="@+id/home_meeting_more_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginRight="@dimen/size_13dp"
                android:drawablePadding="@dimen/size_6dp"
                android:drawableRight="@mipmap/img_right_arrows"
                android:text="@string/str_more" />
        </RelativeLayout>

        <com.xgjk.common.lib.view.rollViewPager.RollPagerView
            android:id="@+id/home_meting_banners_rpv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_148dp"
            android:layout_marginLeft="@dimen/size_13dp"
            android:layout_marginRight="@dimen/size_13dp"
            android:layout_marginTop="@dimen/size_3dp"
            app:rollviewpager_hint_gravity="center" />
    </LinearLayout>
</layout>