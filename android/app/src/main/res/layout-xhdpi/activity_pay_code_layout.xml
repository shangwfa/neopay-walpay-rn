<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size_10dp"
        android:layout_marginRight="@dimen/size_10dp"
        android:layout_marginTop="@dimen/size_10dp"
        android:background="@drawable/shape_round_white"
        android:padding="@dimen/size_5dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:layout_marginTop="@dimen/size_20dp"
            android:orientation="vertical"
            android:visibility="visible">

            <ImageView
                android:id="@+id/pay_code_qr_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:src="@mipmap/img_home_bg" />

            <View
                style="@style/horizontal_line"
                android:layout_height="@dimen/size_2dp"
                android:layout_marginLeft="@dimen/size_5dp"
                android:layout_marginRight="@dimen/size_5dp"
                android:layout_marginTop="@dimen/size_5dp" />

            <include
                android:id="@+id/common_select_ll"
                layout="@layout/common_select_layout" />

            <include layout="@layout/common_support_info_layout" />
        </LinearLayout>

        <ImageView
            android:id="@+id/user_avatar_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:scaleType="fitXY"
            android:src="@mipmap/img_home_big_red_bag" />

    </RelativeLayout>
</layout>