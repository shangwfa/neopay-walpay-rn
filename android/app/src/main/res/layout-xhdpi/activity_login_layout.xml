<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/common_white"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_254dp"
            android:background="@mipmap/img_login_bg"
            android:visibility="visible">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@mipmap/img_login_logo" />

        </FrameLayout>

        <cn.neopay.walpay.android.view.commoninputview.CommonLoginView
            android:id="@+id/login_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_79dp" />

        <cn.neopay.walpay.android.view.commoninputview.CommonLoginView
            android:id="@+id/login_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_46dp" />


        <TextView
            android:id="@+id/login_btn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_50dp"
            android:layout_marginLeft="@dimen/size_13dp"
            android:layout_marginRight="@dimen/size_13dp"
            android:layout_marginTop="@dimen/size_62dp"
            android:background="@mipmap/img_login_btn"
            android:gravity="center"
            android:paddingBottom="@dimen/size_3dp"
            android:text="@string/str_login"
            android:textColor="@color/common_white"
            android:textSize="@dimen/size_15sp" />

        <LinearLayout
            android:id="@+id/login_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_18dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/login_forget_pwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/size_10dp"
                android:text="@string/str_forgot_pwd"
                android:textColor="@color/common_black_light"
                android:textSize="@dimen/size_13sp" />

            <TextView
                android:layout_width="1dp"
                android:layout_height="13dp"
                android:background="@color/common_black_color"
                android:visibility="visible" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_10dp"
                android:text="@string/str_quick_register"
                android:textColor="@color/color_red_login"
                android:textSize="@dimen/size_13sp" />

        </LinearLayout>
    </LinearLayout>
</layout>