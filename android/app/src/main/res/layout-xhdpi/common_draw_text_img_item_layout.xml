<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/text_img_draw_item_ll"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_50dp"
        android:background="#FFF"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_draw_item_iv"
            android:layout_width="@dimen/size_23dp"
            android:layout_height="@dimen/size_24dp"
            android:layout_marginLeft="@dimen/size_12dp"
            android:layout_marginStart="@dimen/size_12dp" />

        <TextView
            android:id="@+id/text_draw_item_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_15dp"
            android:layout_marginStart="@dimen/size_15dp"
            android:layout_weight="1"
            android:singleLine="true"
            android:textColor="@color/common_black"
            android:textSize="@dimen/size_15sp"
            tools:text="" />

        <ImageView
            android:id="@+id/right_arrow_draw_item_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_marginEnd="@dimen/size_10dp"
            android:layout_marginRight="@dimen/size_10dp"
            android:background="@mipmap/img_right_arrow" />

    </LinearLayout>

</FrameLayout>


