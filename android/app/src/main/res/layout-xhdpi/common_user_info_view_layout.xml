<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View style="@style/line_horizontal" />

    <ImageView
        android:id="@+id/user_sign_in"
        android:layout_width="@dimen/size_25dp"
        android:layout_height="@dimen/size_25dp"
        android:layout_gravity="right"
        android:layout_marginRight="@dimen/size_10dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/img_default_user_photo" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_75dp"
        android:background="@color/common_white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/user_avatar_iv"
            android:layout_width="@dimen/size_52dp"
            android:layout_height="@dimen/size_52dp"
            android:layout_marginLeft="@dimen/size_10dp"
            android:src="@mipmap/img_default_user_photo" />

        <LinearLayout
            style="@style/wc_and_wc"
            android:layout_marginLeft="@dimen/size_18dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/common_black"
                android:textSize="@dimen/size_18dp"
                tools:text="" />

            <TextView
                android:id="@+id/user_phone"
                style="@style/wc_and_wc"
                android:layout_marginTop="@dimen/size_5dp"
                android:maxLines="1"
                android:textColor="@color/color_one_type"
                android:textSize="@dimen/size_14dp"
                tools:text="" />
        </LinearLayout>

        <View
            style="@style/horizontal_weight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <TextView
        android:id="@+id/real_name_certification_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/size_10dp"
        android:background="@drawable/shape_round_gray"
        android:padding="@dimen/size_10dp"
        android:text="@string/str_user_authentication" />

    <View style="@style/line_horizontal" />
</LinearLayout>


