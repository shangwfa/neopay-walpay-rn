<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/common_white">

        <LinearLayout
            android:id="@+id/common_news_red_packet_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_13dp"
            android:layout_marginRight="@dimen/size_13dp"
            android:layout_marginTop="@dimen/size_10dp"
            android:orientation="vertical">

            <include
                android:id="@+id/common_news_title_ll"
                layout="@layout/common_news_title_layout" />

            <FrameLayout
                android:id="@+id/red_packet_style_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/size_15dp"
                android:layout_marginTop="@dimen/size_10dp">

                <ImageView
                    android:id="@+id/red_packet_bg_iv"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_155dp"
                    android:scaleType="fitXY" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/red_packet_msg_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="18dp"
                        android:layout_marginLeft="80dp"
                        android:layout_marginStart="80dp"
                        android:text="dsaads"
                        android:textColor="#FBDEB0"
                        android:textSize="14sp"
                        android:visibility="gone" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="97dp"
                        android:layout_marginStart="97dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/red_packet_amount_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="18dp"
                            android:layout_marginLeft="33dp"
                            android:layout_marginStart="33dp"
                            android:text=""
                            android:textColor="#FBDEB0"
                            android:textSize="27sp"
                            android:visibility="visible" />

                        <TextView
                            android:id="@+id/red_packet_title_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="@color/red_packet_text"
                            android:textSize="@dimen/size_17sp" />

                        <View
                            android:id="@+id/red_packet_from_empty_view"
                            android:layout_width="10dp"
                            android:layout_height="7dp"
                            android:visibility="visible" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/size_16dp"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <View
                                android:id="@+id/red_packet_line_view"
                                android:layout_width="31dp"
                                android:layout_height="1dp"
                                android:alpha="0.65"
                                android:background="#FBDEB0"
                                android:visibility="visible" />

                            <TextView
                                android:id="@+id/red_packet_from_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:alpha="0.65"
                                android:text=""
                                android:textColor="@color/red_packet_text"
                                android:textSize="@dimen/size_13sp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </FrameLayout>
        </LinearLayout>
    </FrameLayout>
</layout>