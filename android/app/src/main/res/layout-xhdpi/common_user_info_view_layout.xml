<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/size_202dp"
    android:background="@color/common_black_gray">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_162dp"
        android:background="@mipmap/img_mine_bg"
        android:scaleType="fitXY" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_126dp"
        android:layout_marginLeft="@dimen/size_10dp"
        android:layout_marginRight="@dimen/size_10dp"
        android:layout_marginTop="@dimen/size_69dp"
        android:scaleType="fitXY"
        android:src="@mipmap/img_mine_info_bg" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/size_45dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/mine_user_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_8dp"
            android:text=""
            android:textColor="@color/common_color_black"
            android:textSize="@dimen/size_17sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/mine_user_phone_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_5dp"
            android:drawableLeft="@mipmap/img_red_phone"
            android:drawablePadding="@dimen/size_6dp"
            android:text=""
            android:textColor="@color/common_black_light"
            android:textSize="@dimen/size_14sp"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/mine_go_auth_iv"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/size_20dp"
            android:layout_marginTop="@dimen/size_5dp"
            android:scaleType="fitXY"
            android:src="@mipmap/img_go_auth"
            android:visibility="gone" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/mine_user_rl"
        android:layout_width="@dimen/size_70dp"
        android:layout_height="@dimen/size_70dp"
        android:layout_gravity="center"
        android:layout_marginTop="-30dp">

        <ImageView
            android:id="@+id/mine_user_avatar_iv"
            android:layout_width="@dimen/size_70dp"
            android:layout_height="@dimen/size_70dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:scaleType="fitXY" />

        <ImageView
            android:id="@+id/mine_auth_state_iv"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/size_12dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:scaleType="fitXY" />
    </RelativeLayout>
</FrameLayout>


