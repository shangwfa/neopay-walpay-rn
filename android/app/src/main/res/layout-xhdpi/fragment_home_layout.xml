<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/common_white"
        android:orientation="vertical">

        <cn.neopay.walpay.android.view.actionview.HomeTopView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.1" />

        <cn.neopay.walpay.android.view.actionview.HomeMiddleView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.4" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_9dp"
            android:background="@color/common_little_white" />

        <cn.neopay.walpay.android.view.actionview.HomePromotionsView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.3" />

    </LinearLayout>
</layout>