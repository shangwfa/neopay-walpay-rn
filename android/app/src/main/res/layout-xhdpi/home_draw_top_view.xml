<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <FrameLayout
        android:id="@+id/home_draw_top_container_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/home_draw_simple_avatar_container_ll"
            android:layout_width="match_parent"
            android:layout_height="73dp"
            android:background="@mipmap/img_home_draw_header_bg"
            android:visibility="visible">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_35dp">

                <ImageView
                    android:id="@+id/home_simple_avatar_iv"
                    android:layout_width="@dimen/size_30dp"
                    android:layout_height="@dimen/size_30dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="@dimen/size_12dp"
                    android:layout_marginStart="@dimen/size_12dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/img_default_avater" />

                <TextView
                    android:id="@+id/home_simple_avatar_des_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/size_10dp"
                    android:layout_marginStart="@dimen/size_10dp"
                    android:layout_toEndOf="@+id/home_simple_avatar_iv"
                    android:layout_toRightOf="@+id/home_simple_avatar_iv"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="@dimen/size_14sp" />

                <ImageView
                    android:id="@+id/home_simple_big_red_packet_iv"
                    android:layout_width="@dimen/size_30dp"
                    android:layout_height="@dimen/size_30dp"
                    android:layout_centerInParent="true"
                    android:layout_marginEnd="35dp"
                    android:layout_marginRight="35dp"
                    android:layout_toLeftOf="@+id/home_simple_phone_charge_iv"
                    android:layout_toStartOf="@+id/home_simple_phone_charge_iv"
                    android:scaleType="fitXY"
                    android:src="@mipmap/img_home_draw_simple_red_packet" />

                <ImageView
                    android:id="@+id/home_simple_phone_charge_iv"
                    android:layout_width="@dimen/size_30dp"
                    android:layout_height="@dimen/size_30dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_marginEnd="@dimen/size_17dp"
                    android:layout_marginRight="@dimen/size_17dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/img_home_draw_simple_phone_charge" />
            </RelativeLayout>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/home_draw_avatar_container_ll"
            android:layout_width="match_parent"
            android:layout_height="73dp"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="@dimen/size_23dp"
                android:gravity="center|left"
                android:orientation="horizontal"
                tools:ignore="RtlHardcoded">

                <ImageView
                    android:id="@+id/home_avatar_iv"
                    android:layout_width="@dimen/size_38dp"
                    android:layout_height="@dimen/size_38dp"
                    android:layout_marginLeft="@dimen/size_12dp"
                    android:layout_marginStart="@dimen/size_12dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/img_default_avater" />

                <TextView
                    android:id="@+id/home_avatar_des_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size_10dp"
                    android:text="      "
                    android:textColor="@color/white"
                    android:textSize="@dimen/size_17sp" />
            </LinearLayout>
        </FrameLayout>


    </FrameLayout>
</layout>