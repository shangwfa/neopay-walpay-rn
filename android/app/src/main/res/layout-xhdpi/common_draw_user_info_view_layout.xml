<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/size_304dp"
    android:background="@color/white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img_mine_draw_bg_iv"
        android:layout_width="match_parent"
        android:layout_height="191dp"
        android:scaleType="fitXY" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="117dp"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/mine_draw_user_rl"
            android:layout_width="@dimen/size_70dp"
            android:layout_height="@dimen/size_70dp"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/mine_draw_user_avatar_iv"
                android:layout_width="@dimen/size_70dp"
                android:layout_height="@dimen/size_70dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:scaleType="fitXY"
                android:src="@mipmap/img_default_avater" />

            <ImageView
                android:id="@+id/mine_draw_auth_state_iv"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/size_12dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:scaleType="fitXY" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_5dp" />

            <LinearLayout
                android:id="@+id/mine_draw_auth_state_ll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_10dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="visible">

                <TextView
                    android:id="@+id/mine_draw_user_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/common_color_black"
                    android:textSize="@dimen/size_17sp"
                    android:visibility="visible" />

                <ImageView
                    android:id="@+id/mine_draw_go_auth_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/size_20dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/size_5dp"
                    android:layout_marginStart="@dimen/size_5dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/img_mine_draw_auth_go"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_5dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/mine_draw_user_phone_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/common_black_light"
                    android:textSize="@dimen/size_14sp"
                    android:visibility="visible" />

                <ImageView
                    android:id="@+id/mine_draw_go_auth_two_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/size_20dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/size_11dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/img_mine_draw_auth_go"
                    android:visibility="gone" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>


</FrameLayout>


